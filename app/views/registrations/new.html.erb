<h1>Register here!</h1>

<%= form_for @registration do |r| %>
  <div class="form-horizontal">
    <div class="form-group">
      <%= r.label :presenter, class:"col-md-2 form-control" %>
      <div class="col-md-5">
        <%= r.text_field :presenter, class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= r.label :topic, class:"col-md-2 form-control" %>
      <div class="col-md-5">
        <%= r.text_field :topic, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= r.submit "Create Talk", class:"btn btn-primary" %>
        <%= link_to "Cancel", root_path, class:"btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>
